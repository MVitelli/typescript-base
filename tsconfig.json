{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "rootDir": "src",
    "declaration": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules, src/**/*.spec.ts"
  ]
}
